@model Web.Models.Activity

@{
    ViewData["Title"] = "Create Activity";
}

<h2>Create New Activity</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="row">
        <div class="col-md-6">
            <h4>Basic Information</h4>
            
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Activity Title *</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Location" class="form-label">Location</label>
                <input asp-for="Location" class="form-control" placeholder="Building, room, address, etc." />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <h4>Schedule & Capacity</h4>
            
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label">Start Date & Time *</label>
                <input asp-for="StartDate" class="form-control" type="datetime-local" required />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndDate" class="form-label">End Date & Time</label>
                <input asp-for="EndDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
                <div class="form-text">Leave blank if activity is single date/time</div>
            </div>

            <div class="mb-3">
                <label asp-for="MaxParticipants" class="form-label">Maximum Participants</label>
                <input asp-for="MaxParticipants" class="form-control" type="number" min="0" value="0" />
                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                <div class="form-text">Enter 0 for unlimited participants</div>
            </div>

            <div class="mb-3">
                <label asp-for="MaxVolunteers" class="form-label">Maximum Volunteers</label>
                <input asp-for="MaxVolunteers" class="form-control" type="number" min="0" value="0" />
                <span asp-validation-for="MaxVolunteers" class="text-danger"></span>
                <div class="form-text">Enter 0 for unlimited volunteers</div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create Activity</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}