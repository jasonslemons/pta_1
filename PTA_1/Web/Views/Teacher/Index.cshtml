@model IEnumerable<Web.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<h2>Teachers</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">Register New Teacher</a>
    </div>
    <div class="col-md-6">
        <form asp-action="Search" method="get" class="d-flex">
            <input type="text" name="searchTerm" class="form-control me-2" placeholder="Search teachers..." value="@ViewBag.SearchTerm">
            <button type="submit" class="btn btn-outline-secondary">Search</button>
        </form>
    </div>
</div>

@if (ViewBag.SearchTerm != null)
{
    <div class="alert alert-info">
        Search results for "@ViewBag.SearchTerm" - <a asp-action="Index">Show all teachers</a>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Grade</th>
            <th>Classroom</th>
            <th>Subject</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@(teacher.EmployeeId ?? "Not assigned")</td>
                <td>@teacher.Person.FirstName</td>
                <td>@teacher.Person.LastName</td>
                <td>@(teacher.Grade ?? "Not specified")</td>
                <td>@(teacher.Classroom ?? "Not specified")</td>
                <td>@(teacher.Subject ?? "Not specified")</td>
                <td>@(teacher.Email ?? "Not specified")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No teachers found.
    </div>
}