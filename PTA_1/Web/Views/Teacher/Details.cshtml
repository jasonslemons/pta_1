@model Web.Models.Teacher

@{
    ViewData["Title"] = "Teacher Details";
}

<h2>Teacher Details</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Personal Information</h4>
        <dl class="row">
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8">@Model.Person.FirstName @Model.Person.MiddleName @Model.Person.LastName @Model.Person.Suffix</dd>

            <dt class="col-sm-4">Birthday:</dt>
            <dd class="col-sm-8">@(Model.Person.Birthday?.ToString("MM/dd/yyyy") ?? "Not specified")</dd>

            <dt class="col-sm-4">SSN:</dt>
            <dd class="col-sm-8">@(Model.Person.SSN ?? "Not specified")</dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4>Employment Information</h4>
        <dl class="row">
            <dt class="col-sm-4">Employee ID:</dt>
            <dd class="col-sm-8">@(Model.EmployeeId ?? "Not assigned")</dd>

            <dt class="col-sm-4">Grade Level:</dt>
            <dd class="col-sm-8">@(Model.Grade ?? "Not specified")</dd>

            <dt class="col-sm-4">Classroom:</dt>
            <dd class="col-sm-8">@(Model.Classroom ?? "Not specified")</dd>

            <dt class="col-sm-4">Subject:</dt>
            <dd class="col-sm-8">@(Model.Subject ?? "Not specified")</dd>

            <dt class="col-sm-4">Hire Date:</dt>
            <dd class="col-sm-8">@Model.HireDate.ToString("MM/dd/yyyy")</dd>
        </dl>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h4>Contact Information</h4>
        <dl class="row">
            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@(Model.Email ?? "Not specified")</dd>

            <dt class="col-sm-4">Phone:</dt>
            <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not specified")</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Teachers</a>
</div>