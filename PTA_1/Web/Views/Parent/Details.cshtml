@model Web.Models.Parent

@{
    ViewData["Title"] = "Parent Details";
}

<h2>Parent Details</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Personal Information</h4>
        <dl class="row">
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8">@Model.Person.FirstName @Model.Person.MiddleName @Model.Person.LastName @Model.Person.Suffix</dd>

            <dt class="col-sm-4">Birthday:</dt>
            <dd class="col-sm-8">@(Model.Person.Birthday?.ToString("MM/dd/yyyy") ?? "Not specified")</dd>

            <dt class="col-sm-4">SSN:</dt>
            <dd class="col-sm-8">@(Model.Person.SSN ?? "Not specified")</dd>

            <dt class="col-sm-4">Occupation:</dt>
            <dd class="col-sm-8">@(Model.Occupation ?? "Not specified")</dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4>Contact Information</h4>
        <dl class="row">
            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@(Model.Email ?? "Not specified")</dd>

            <dt class="col-sm-4">Phone:</dt>
            <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not specified")</dd>

            <dt class="col-sm-4">Address:</dt>
            <dd class="col-sm-8">@(Model.Address ?? "Not specified")</dd>
        </dl>
    </div>
</div>

@if (Model.ParentStudents.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <h4>Children</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Grade</th>
                        <th>Student ID</th>
                        <th>Relationship</th>
                        <th>Primary Contact</th>
                        <th>Pickup Authorization</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ps in Model.ParentStudents)
                    {
                        <tr>
                            <td>@ps.Student.Person.FirstName @ps.Student.Person.LastName</td>
                            <td>@ps.Student.Grade</td>
                            <td>@(ps.Student.StudentId ?? "Not assigned")</td>
                            <td>@ps.RelationshipType</td>
                            <td>@(ps.IsPrimaryContact ? "Yes" : "No")</td>
                            <td>@(ps.HasPickupAuthorization ? "Yes" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Parents</a>
</div>